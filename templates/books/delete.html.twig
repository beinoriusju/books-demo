{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
<div class="container">
    <h1>Are you sure you want to delete this book?</h1>

    <h2>{{ book.title }}</h2>

    <form method="post" action="{{ path('book_delete', { 'id': book.id }) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
        <button type="submit" class="btn btn-danger ">Yes, Delete Book</button>
        <a href="{{ path('book_index') }}" class="btn btn-secondary">Cancel</a>
    </form>

    
</div>
{% endblock %}